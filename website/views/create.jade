extends layout

//- block css will insert css scripts listed in head.jade that are needed on every page.
block css
	//- files below are page specific
	link(rel='stylesheet' href='css/validate.css')
	link(rel="stylesheet" href="css/json-tree.css")
	link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/nvd3/1.8.1/nv.d3.min.css")
	link(rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/angularjs-toaster/2.1.0/toaster.css")
	link(rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons")
	link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/angular-busy/4.1.4/angular-busy.min.css")
	link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/intro.js/2.7.0/introjs.min.css")

block body
	body.step0(ng-app='validateApp' ng-cloak)
		#wrapper

			include ./include/navbar.jade
			md-toolbar
				.md-toolbar-tools
					.md-title Create LiPD

			.col-sm-12

				#form-container(ng-controller="ValidateCtrl as vc")
					toaster-container(toaster-options="{'close-button':false, 'time-out':{ 'toast-warning': 2000, 'toast-error': 0 } }")

					form#upload-form(ng-submit='')

						//- Jumbotron Tabs
						include ./sections/jumbotron.jade

						br

						div(cg-busy="pageMeta.busyPromise")

							.alert.alert-info(role='warning')
								button.close(type='button', data-dismiss='alert') Ã—
								strong Coming soon!
								p - Ensemble and distribution table creating and editing is under development. Ensemble data is visible but has limited functionality.
							br

							include ./pieces/version.jade
							div
								pre(style="background-color:#DFF1C1; border: none;")
									p Are you new here? Take the tour to learn more about how to use this page.
									br
									button.valid-btn(type="button" ng-click="startTour()") Take the tour!
									a.btn.btn-default.valid-btn(href="https://github.com/chrismheiser/geoChronR/issues" type="button") Help Us Improve
										md-tooltip Use the Github repository to see upcoming changes, fixes, report bugs, and make suggestions

							div(class="span span50" style="padding-right:3em;")
								md-toolbar.md-hue-1
									h2.md-toolbar-tools
										span Load & Validates
								div
									ol
										include ./pieces/action_btns.jade
										include ./pieces/noaa_wiki_btns.jade
										include ./pieces/feedback.jade									
											
							div(class="span span50")
								div.step11
									include ./sections/root.jade
								div.step12
									include ./sections/noaa.jade
								div.step13
									include ./sections/funding.jade
								div.step14
									include ./sections/publication.jade
								div.step15
									include ./sections/geo.jade

							include ./sections/paleo.jade
							.step23
								include ./sections/chron.jade

