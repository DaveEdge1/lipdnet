div(ng-repeat='entry in files.json.paleoData track by $index' layout-wrap="" ng-init="parentIdx = $index")

    // PaleoData[1] : Should only be one table. Don't need to loop
    div(ng-repeat="entry2 in entry.measurementTable track by $index" layout-wrap="")
        md-card(ng-show="entry2.tmp.toggle")
            //md-subheader.md-primary paleo {{parentIdx+1}} > measurement {{$index+1}}
            md-subheader.md-primary paleo {{parentIdx}} > measurement {{$index}}

            include ./table_root.jade

            div.step16
                // Toggle for switching between Classic and Spreadsheet parsers.
                md-switch(style="margin:1em" ng-model="pageMeta.spreadsheetBeta") Parse Mode: {{ pageMeta.spreadsheetBeta? "Spreadsheet (Beta)": "Classic"}}
                br
                div(ng-controller="SpreadsheetCtrl as sc")
                    // Column Data
                    include ./table_column
                    div
                        // Classic Parser
                        div(ng-if="!pageMeta.spreadsheetBeta")
                            include ./parse_csv.jade
                                button.green-btn-off(ng-click="parseCsv(entry2, parentIdx, $index, {'pc': 'paleo', 'tt': 'measurement'}); toggleCsvBox(entry2)" style="margin: 1.5em; float:right;" type="button") Parse Values
                        // Spreadsheet Parser
                        div(ng-if="pageMeta.spreadsheetBeta")
                            include ./spreadsheet_csv.jade
            .md-toolbar-tools(style="background-color:white;")
                span(flex)
                button.red-btn-off(type="button" ng-click="removeBlock(entry.measurementTable, $index)" style="margin: 1.5em; padding: 2px 2px 2px 2px;") Delete Table

