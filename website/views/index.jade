extends layout

block css
	link(rel='stylesheet' href='css/index.css')

block body
	// add #bg-img to body for photo background
	body(ng-app='indexApp')
		#wrapper
			include ./include/navbar.jade
			section#content
				.container
					.text-center
						h1.md-display-3 Lorem Ipsum
						p.md-subhead Lorem Ipsum is simply dummy text of the printing and typesetting 
							| industry. Lorem Ipsum has been the industry's standard 
							| dummy text ever since the 1500s, when an unknown printer 
							| took a galley of type and scrambled it to make a type specimen 
							| book. It has survived not only five centuries, but also the leap 
							| into electronic typesetting, remaining essentially unchanged.
							| It was popularised in the 1960s with the release of Letraset sheets 
							| containing Lorem Ipsum passages, and more recently with desktop 
							| publishing software like Aldus PageMaker including versions of Lorem Ipsum.
			a.right.smoothScroll(href="#about")
				i.fa.fa-angle-double-down.fa-5x
	.container.cf#about
		.animation-element.bounce-up.cf
			h1.subject.md-display-3(layout layout-align="center center") About Us
			.subject.first
				.category-color
				.icon
					i.fa.fa-users
				.header.cf
				h3.title Team
				.content(layout-sm='column' layout='row' layout-align='space-around center')
					.flex.layout-margin
						md-card
							img.md-card-image(ng-src="img/heiser.jpg")
							md-card-content
								h2.md-title Christopher Heiser
								p Lorem Ipsum is simply dummy text of the printing and typesetting industry.
					.flex.layout-margin
						md-card
							img.md-card-image(ng-src="img/mckay.jpg")
							md-card-content
								h2.md-title Nicholas McKay
								p Lorem Ipsum is simply dummy text of the printing and typesetting industry.
					.flex.layout-margin
						md-card
							img.md-card-image(ng-src="img/mcdowell.jpg")
							md-card-content
								h2.md-title Austin McDowell
								p Lorem Ipsum is simply dummy text of the printing and typesetting industry.
				
			.subject.second
				.category-color
				.icon
					i.fa.fa-globe
				.header.cf
				h3.title Location
				.content
					div(ng-controller='MapCtrl' ng-cloak)
						ui-gmap-google-map(center="map.center" zoom="map.zoom" options="options")
	

	
	.container.cf#contact
		.animation-element.bounce-up.cf
			h1.subject.md-display-3(layout layout-align="center center") Contact
			.subject.third
				.category-color
				.icon
					i.fa.fa-envelope
				.header.cf
				h3.title Questions, comments, concerns...
				.content(ng-controller='ContactCtrl' layout-sm='row' layout='row' layout-align="space-around center" ng-cloak)
					div(flex='30')
						h4 We'd love to hear from ryou!
						p Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book
					div(flex='50')
						md-input-container
							label Name
							input(type="text" ng-model='name')
						md-input-container
							label E-Mail
							input(type="email" ng-model='email')
						md-input-container
							label Message
							textarea(type="text" ng-model='message')
						md-button.send Send

block js
	script(src='https://cdnjs.cloudflare.com/ajax/libs/angular-google-maps/2.2.0/angular-google-maps.min.js')
	script(src='https://maps.googleapis.com/maps/api/js?sensor=false')
	script(src='js/indexApp.js')
	script(src='js/ngMap.js')
	script(src='js/ngContact.js')
	script(src='js/animate.js')
	script(src='js/smooth.js')
