
extends layout

//- block css will insert css scripts listed in head.jade that are needed on every page.
block css
	//- files below are page specific
	link(rel='stylesheet' href='css/validate.css')
	link(rel="stylesheet" href="css/json-tree.css")
	link(rel="stylesheet" href="lib/ngDiff/angular-object-diff.css")
	link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/nvd3/1.8.1/nv.d3.min.css")
	link(rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/angularjs-toaster/2.1.0/toaster.css")
	link(rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons")
	link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/angular-busy/4.1.4/angular-busy.min.css")
	link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/intro.js/2.9.3/introjs.min.css")
	link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/handsontable/3.0.0/handsontable.full.min.css")

block body
	body.step0(ng-app='validateApp' ng-cloak style="min-height: 100%; background-color:white;")
		#wrapper
			//div.tourbanner.alert.alert-success.alert-dismissable
			//	strong Lipdverse upload bug fixed!
			//	p The bug is fixed and you can use the "Upload to Lipdverse" feature again. Thank you for your patience.

			include ./include/navbar.jade
			md-toolbar
				.md-toolbar-tools
					.md-title Playground

			.col-sm-12

				#form-container(ng-controller="ValidateCtrl as vc")
					toaster-container(toaster-options="{'close-button':false, 'time-out':{ 'toast-warning': 2000, 'toast-error': 0 } }")

					form#upload-form(ng-submit='')

						//- Jumbotron Tabs
						include ./sections/jumbotron.jade

						br

						div(cg-busy="pageMeta.busyPromise")

							include buttons/version.jade

							div
								pre(style="background-color:#DFF1C1; border: none;")
									p Are you new here? Take the tour to learn more about how to use this page.
									br
									button.btn.btn-default.green-btn-off(type="button" ng-click="startTour()") Take the tour!
									a.tourgithub.btn.btn-default.green-btn-off(href="https://github.com/chrismheiser/geoChronR/issues" type="button" style="width:250px") Questions, comments, concerns
										md-tooltip Use the Github repository to see upcoming changes, fixes, report bugs, and make suggestions

							div(class="span span50" style="padding-right:3em;")
								md-toolbar.md-hue-1
									h2.md-toolbar-tools
										span Load & Validate
								div
									ol
										include buttons/action_btns.jade
										include buttons/noaa_wiki_btns.jade
										div.long-header(style="text-align:center; margin-top:30px;")
											div(style="display:inline-block;") LiPD Completion
										uib-progressbar.progressbarextra(animate="true" value="feedback.lipdComplete" type="{{feedback.lipdCompleteType}}" uib-popover-html="progressPopover" popover-trigger="'mouseenter'")
											span(style="white-space:nowrap; color: white !important;") {{feedback.lipdComplete}} %  |  {{feedback.posCt}} / {{feedback.lipdCompleteCt}}
										include buttons/feedback.jade

							div(class="span span50")
								div.step11
									include ./sections/root.jade
								div.step12
									include ./sections/noaa.jade
								div.step13
									include ./sections/funding.jade
								div.step14
									include ./sections/publication.jade
								div.step15
									include ./sections/geo.jade

							include ./sections/paleo.jade
							.step23
								include ./sections/chron.jade

